{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean & Build All",
      "type": "shell",
      "command": "dotnet clean && dotnet build --no-restore",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "panel": "shared",
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "BlazorWasm - build & watch tailwind",
      "type": "shell",
      "command": "dotnet build -p:TailwindBuild=false && npm run watch",
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "stop BlazorWasm watch",
      "command": "echo ${input:terminate-wasm}",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "BlazorServer - build & watch tailwind",
      "type": "shell",
      "command": "dotnet build -p:TailwindBuild=false && npm run watch",
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "stop server watch",
      "command": "echo ${input:terminate-server}",
      "type": "shell",
      "problemMatcher": []
    }
    // {
    //   "label": "delay",
    //   "type": "shell",
    //   "command": "sleep 2",
    //   "presentation": {
    //     "echo": false,
    //     "reveal": "never",
    //     "panel": "shared",
    //     "clear": true
    //   }
    // },
  ],
  "inputs": [
    {
      "id": "terminate-wasm",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "BlazorWasm - build & watch tailwind"
    },
    {
      "id": "terminate-server",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "BlazorServer - build & watch tailwind"
    }
  ]
}