{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean & Build All",
      "type": "shell",
      "command": "dotnet clean && dotnet build --no-restore",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "panel": "shared",
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "dotnet build & watch tailwind",
      "type": "shell",
      "command": "dotnet build -p:TailwindBuild=false && npm run watch",
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "clear": true
      },
    },
    {
      "label": "stop wasm watch",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "id": "terminate-wasm",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "dotnet build & watch tailwind"
    }
  ]
}