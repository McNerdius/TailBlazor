
@namespace StaticWebAppsDemo.Layouts
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting

@inherits LayoutComponentBase
@inject NavigationManager navManager

<div class="grid grid-cols-basic grid-rows-basic h-full @debug">

    <div class="col-span-2 flex flex-row pl-4 pr-1 self-center justify-between">

        <div class="!text-blue-500 text-3xl font-extrabold italic tracking-widest flex-grow self-center">WIP!</div>    

        <DarkSwitch />

        <a href="https://github.com/McNerdius/TailBlazor" target="_blank"
           class="pt-2 px-3 transition-transform ease-in duration-100 hover:scale-125" >
            <svg class="h-6 w-6 mx-1 self-center " viewBox="0 0 16 16" fill="currentColor">
                <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
            </svg>
        </a>

    </div>

    <div class="@NavMenuCssClass 
                pl-1 pr-2 pt-8
                rounded-r-md" >

        <NavLinks />

    </div>

    <div class="w-full h-full overflow-x-hidden overflow-y-auto
                scrollbar-thin scrollbar-thumb-slate-300 scrollbar-track-gray-600"

         @onclick="changeAccent">
        @Body
    </div>

</div>

<div class="absolute bottom-4 right-8
            sm:hidden 
            w-14 h-14  
            !bg-blue-500 rounded-full shadow-2xl shadow-black">
    <button @onclick="ToggleNavMenu" class="relative w-14 h-14" >
        <svg class="transition-opacity  absolute top-2 left-2 w-10 h-10 
                @(hidden?"opacity-100 duration-700":"opacity-0 duration-50")" fill="none" 
                
            stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path></svg>
        <svg class="transition-opacity absolute top-2 left-2 w-10 h-10 
                @(hidden?"opacity-0  duration-50":"opacity-100 duration-700")" fill="none" 
                
            stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    </button>
</div>



@code 
{
    [Inject] public IWebAssemblyHostEnvironment HostEnvironment { get; set; }
    private string debug => HostEnvironment.IsDevelopment() ? "debug-screens" : "";
    private string accentColor = "accent-blue";

    private bool hidden = true;
    private string? NavMenuCssClass => hidden ? "invisible sm:visible w-0 sm:w-auto" : null;

    void changeAccent()
    {
        var colors = new[] { "blue", "green", "yellow", "indigo", "pink", "black", "white" };

        accentColor = $"accent-{oneOf(colors.Except(new[]{accentColor}))}";

        T oneOf<T>(IEnumerable<T> items) => items.OrderBy(_ => Random.Shared.Next()).First();
    }

    private void ToggleNavMenu()
    {
        hidden = !hidden;
        ShouldRender();
    }
}