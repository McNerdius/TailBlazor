{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API: Watch",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "args": [
        "watch",
        "msbuild",
        "/t:RunFunctions"
      ],
      "cwd": "${workspaceFolder}/API",
      "presentation": {
        "group": "API",
        "close": true
      }
    },
    {
      "name": "API: Debug",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:azureFunctions.pickProcess}",
      "presentation": {
        "group": "API",
        "close": true
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Client ONLY: Watch",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "start tailwind jit/watch",
      "postDebugTask": "stop tailwind jit/watch",
      "args": [
        "watch",
        "run"
      ],
      "cwd": "${workspaceFolder}/Client",
      "presentation": {
        "close": true
      }
    },
    {
      "name": "Client ONLY: Debug",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}/Client",
      "preLaunchTask": "start tailwind jit/watch",
      "postDebugTask": "stop tailwind jit/watch",
      "presentation": {
        "close": true
      },
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Server: Watch",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "args": [
        "watch",
        "run"
      ],
      "cwd": "${workspaceFolder}/Server",
      "presentation": {
        "group": "Server",
        "close": true,
      },
      "preLaunchTask": "start tailwind jit/watch",
      "postDebugTask": "stop tailwind jit/watch",
    },
    {
      // Use IntelliSense to find out which attributes exist for C# debugging
      // Use hover for the description of the existing attributes
      // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
      "name": "Server: Debug",
      "type": "coreclr",
      "request": "launch",
      // If you have changed target frameworks, make sure to update the program path.
      "program": "${workspaceFolder}/Server/bin/Debug/net6.0/Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Server",
      "stopAtEntry": false,
      // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "presentation": {
        "group": "Server",
        "close": true
      },
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Client+API: Watch",
      "configurations": [
        "API: Watch",
        "Client ONLY: Watch"
      ],
      "presentation": {
        "group": "Client",
        "close": true
      },
      "stopAll": true
    },
    {
      "name": "Client+API: Debug",
      "configurations": [
        "API: Debug",
        "Client ONLY: Debug"
      ],
      "presentation": {
        "group": "Client",
        "close": true,
      },
      "stopAll": true
    }
  ]
}