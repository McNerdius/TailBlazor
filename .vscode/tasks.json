{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Shared: Clean & Build",
      "type": "shell",
      "command": "dotnet clean && dotnet build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/Shared"
      },
      "runOptions": {
        // generates Shared.styles.css behind the scenes
        // if it is missing, npm scripts will fail
        "runOn": "folderOpen"
      },
      "group": "build"
    },
    {
      "label": "Clean & Build All",
      "type": "shell",
      "command": "dotnet clean && dotnet build --no-restore",
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "panel": "shared",
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "start tailwind jit/watch - client",
      "type": "npm",
      "script": "watch-client",
      // "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "start tailwind jit/watch - server",
      "type": "npm",
      "script": "watch-server",
      // "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "delay",
      "type": "shell",
      "command": "sleep 2",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared"
      }
    },
    {
      "label": "stop tailwind jit/watch - client",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    },
    {
      "label": "stop tailwind jit/watch - server",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate-client",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "start tailwind jit/watch - client"
    },
    {
      "id": "terminate-server",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "start tailwind jit/watch - client"
    }
  ]
}